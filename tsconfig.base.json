{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es2015",
        "module": "es2020",
        "lib": [
            "es2018",
            "dom"
        ],
        "paths": {
            "@cplace/design": [
              "projects/cplace/design/src/public-api.ts",
              "dist/cplace/design"
            ],
            "@cplace/design/*": [
              "projects/cplace/design/src/lib/*",
              "dist/cplace/design/*"
            ]
        }
    }
}
